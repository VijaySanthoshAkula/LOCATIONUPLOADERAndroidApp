<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.avsanthoshkumar.locationuploader.SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="7dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:src="@drawable/iiitblogo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="405dp"
            android:orientation="vertical">
            <EditText
                android:drawableStart="@drawable/ic_person_pin_black_24dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:id="@+id/IdNumber"
                android:hint=" Id Number"
                android:textStyle="bold"
                android:textColorHint="#FFF"
                android:padding="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_pin_black_24dp" />
            <EditText
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:id="@+id/Name"
                android:hint=" Name"
                android:textStyle="bold"
                android:textColorHint="#FFF"
                android:padding="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_black_24dp" />
            <EditText
                android:background="@drawable/buttonstyle"
                android:drawableStart="@drawable/ic_contact_phone_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:id="@+id/PhoneNumber"
                android:hint=" Contact Number"
                android:textColorHint="#FFF"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_contact_phone_black_24dp" />
            <EditText
                android:background="@drawable/buttonstyle"
                android:drawableStart="@drawable/ic_location_city_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:id="@+id/RoomNumber"
                android:hint=" Room Number"
                android:textColorHint="#FFF"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location_city_black_24dp" />
            <EditText
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:id="@+id/EmailId"
                android:hint=" Email Id"
                android:textStyle="bold"
                android:textColorHint="#FFF"
                android:padding="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_black_24dp" />
            <EditText
                android:inputType="textPassword"
                android:background="@drawable/buttonstyle"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:layout_marginTop="15dp"
                android:id="@+id/Password"
                android:layout_gravity="center"
                android:hint=" Password"
                android:textColorHint="#FFF"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_black_24dp" />

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:indeterminateDrawable="@drawable/circularprogressbar"
                android:layout_below="@+id/button"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignRight="@+id/textView"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignLeft="@+id/textview"
                android:layout_alignStart="@+id/textview"
                android:layout_alignParentBottom="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:textColor="#fff"
                android:background="@drawable/signupbuttonstyle"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="500dp"
                android:id="@+id/SignUp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sign Up"
                android:textAllCaps="false"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
