<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avsanthoshkumar.locationuploader.ForgetpasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:src="@drawable/iiitblogo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Contact Number Below"
                android:textColor="@color/iiitblue"
                android:textStyle="bold"
                android:textSize="27sp"/>
            <EditText
                android:background="@drawable/buttonstyle"
                android:drawableStart="@drawable/ic_contact_phone_black_24dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:id="@+id/PhoneNumber"
                android:hint=" Contact Number"
                android:textColorHint="#FFF"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_lock_black_24dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:textColor="#fff"
                android:background="@drawable/signupbuttonstyle"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="500dp"
                android:id="@+id/GetPassword"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Get Password"
                android:textAllCaps="false"/>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
